<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/media_music_bg"
    tools:context=".v.activity.MusicDialogActivity">

    <SeekBar
        android:id="@+id/seekBar_progress"
        android:progressDrawable="@drawable/media_seek_bar_progress_music"
        android:thumb="@drawable/media_seek_bar_thumb_music"
        android:paddingStart="20dp"
        android:paddingEnd="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:max="0"
        android:progress="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/img_pause_play"
        android:src="@drawable/media_play_black"
        android:layout_gravity="end|bottom"
        android:padding="12dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_title"
        tools:text="你好.mp3"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="bottom"
        android:textColor="#000"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_progress"
        android:text="00:00 / 00:00"
        android:layout_marginBottom="5dp"
        android:textColor="#000"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</FrameLayout>
