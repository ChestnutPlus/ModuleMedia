<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context="com.chestnut.Media.Video.VideoActivity">
    <VideoView
        android:id="@+id/videoView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:background="#3e000000"
        android:id="@+id/bottom_view"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/mr_bg_transparent_to_gray"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/img_pause"
            android:src="@drawable/media_play"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_toEndOf="@id/img_pause"
            android:layout_centerVertical="true"
            android:id="@+id/txt_progress"
            android:textSize="11sp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/txt_total"
            android:textSize="11sp"
            android:text="00:00"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txt_progress"
            android:id="@+id/progress"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:max="0"
            android:progress="0"
            android:layout_toStartOf="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/top_view"
        android:background="#3e000000"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/txt_title"
            android:textSize="15sp"
            android:maxLines="1"
            android:maxLength="15"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@drawable/mr_bg_transparent_to_gray"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/img_close"
            android:src="@drawable/white_close"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
</FrameLayout>
